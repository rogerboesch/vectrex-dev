{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "VectreC: Compile current file",
            "type": "shell",
            "command": "$HOME/vectrec/compile.sh",
            "args": [
                "${workspaceFolder}",
                "${fileBasenameNoExtension}"
            ],
            "options": {
            },
            "problemMatcher": [
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "VectreC: Run current file",
            "type": "shell",
            "command": "$HOME/vectrec/start.sh",
            "args": [
                "${workspaceFolder}",
                "${fileBasenameNoExtension}"
            ],
            "group": {
              "kind": "build",
              "isDefault": false
            }
          }
      
    ]
}